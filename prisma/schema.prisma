generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Peserta {
  id Int @id @default(autoincrement())
  nama String
  umur Int
  jawaban Jawaban[]
  hasil Hasil?
  createdAt DateTime @default(now())
}

model Soal {
  id Int @id @default(autoincrement())
  pertanyaan String
  gambar String?
  jawaban Jawaban[]
}

model Jawaban {
  id Int @id @default(autoincrement())
  pesertaId Int
  soalId Int
  skor Int

  peserta Peserta @relation(fields: [pesertaId], references: [id])
  soal Soal @relation(fields: [soalId], references: [id])
}

model Hasil {
  id Int @id @default(autoincrement())
  pesertaId Int @unique
  skor Float

  peserta Peserta @relation(fields: [pesertaId], references: [id])
}