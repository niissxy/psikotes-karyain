generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum JenisKelamin {
  LAKI_LAKI
  PEREMPUAN
}

model Peserta {
  id Int @id @default(autoincrement())
  nama String
  umur Int
  tanggal_lahir DateTime
  jenis_kelamin JenisKelamin
  tingkat_pendidikan String
  instansi String
  kontak String
  portofolio String?
  jawaban Jawaban[]
  hasil Hasil?
  createdAt DateTime @default(now())
}

model Soal {
  id Int @id @default(autoincrement())
  pertanyaan String
  gambar String?
  jawaban Jawaban[]
}

model Jawaban {
  id Int @id @default(autoincrement())
  pesertaId Int
  soalId Int
  jawaban_text String
  skor Int

  peserta Peserta @relation(fields: [pesertaId], references: [id])
  soal Soal @relation(fields: [soalId], references: [id])
}

model Hasil {
  id Int @id @default(autoincrement())
  pesertaId Int @unique
  skor Float

  peserta Peserta @relation(fields: [pesertaId], references: [id])
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String @unique
  password String?
  image String?
  role Role @default(USER)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}